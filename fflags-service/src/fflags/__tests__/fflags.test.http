@baseUrl=localhost:3524/api/fflags

### Creates a new flag
POST http://{{baseUrl}} HTTP/1.1
Content-Type: application/json

{
  "name": "fifthTestFlag",
  "description": "This is an A/B test.",
  "metrics": {
    "primary": "conversion_rate",
    "secondary": "user_engagement"
  },
  "state": "in_test",
  "targetingRules": {
    "geo": "US"
  },
  "environments": {
    "testing": {
      "rollout": 100,
      "userGroups": {
        "control": {
          "rollout": 50,
          "trackingEvents": ["clicks", "conversion"],
          "enabled": false,
          "value": 100
        },
        "treatment": {
          "rollout": 50,
          "trackingEvents": ["clicks", "conversion"],
          "enabled": true,
          "value": 200
        }
      }
    }
  }
}

